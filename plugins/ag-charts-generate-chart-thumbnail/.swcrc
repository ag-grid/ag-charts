{
    "$schema": "https://json.schemastore.org/swcrc",
    "jsc": {
        "target": "es2022",
        "parser": {
            "syntax": "typescript",
            "decorators": true,
            "dynamicImport": true
        },
        "transform": {
            "decoratorMetadata": true,
            "legacyDecorator": true
        },
        "keepClassNames": true,
        "externalHelpers": true,
        "loose": true
    },
    "module": {
        "type": "commonjs",
        "ignoreDynamic": true
    },
    "sourceMaps": "inline",
    "exclude": [
        "node_modules/**",
        "jest.config.ts",
        ".*\\.spec.tsx?$",
        ".*\\.test.tsx?$",
        "./src/jest-setup.ts$",
        "./**/jest-setup.ts$",
        ".*.js$"
    ]
}
