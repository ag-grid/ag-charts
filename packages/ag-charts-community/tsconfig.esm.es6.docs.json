{
    "extends": "../../module-build/tsconfig.esm.es6.json",
    "compilerOptions": {
        "composite": true,
        "rootDir": "src",
        "outDir": "dist/esm/es6",
        "baseUrl": ".",
        "paths": {
            "@ag-*": ["node_modules/@ag-*/dist/esm/es6/main"]
        },
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "strict": true
    },
    "include": ["src/**/*"],
    "exclude": ["src/main-test.ts", "**/*.test.ts", "**/test/*.ts"]
}
