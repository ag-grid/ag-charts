{
  "name": "ag-charts-website",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "packages/ag-charts-website/src",
  "targets": {
    "build": {
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "dependsOn": [
        {
          "target": "build",
          "projects": "ag-charts-community"
        },
        {
          "target": "build",
          "projects": "ag-charts-enterprise"
        },
        {
          "target": "build",
          "projects": "ag-charts-react"
        },
        {
          "target": "build",
          "projects": "ag-charts-vue"
        },
        {
          "target": "build",
          "projects": "ag-charts-vue3"
        }
      ],
      "executor": "@nxtensions/astro:build",
      "options": {},
      "configurations": {
        "staging": {},
        "production": {}
      }
    },
    "dev": {
      "executor": "@nxtensions/astro:dev",
      "options": {
        "port": 4600,
        "host": true
      },
      "dependsOn": [
        {
          "target": "build",
          "projects": "ag-charts-community"
        },
        {
          "target": "build",
          "projects": "ag-charts-enterprise"
        },
        {
          "target": "build",
          "projects": "ag-charts-angular"
        },
        {
          "target": "build",
          "projects": "ag-charts-react"
        },
        {
          "target": "build",
          "projects": "ag-charts-vue"
        },
        {
          "target": "build",
          "projects": "ag-charts-vue3"
        }
      ]
    },
    "preview": {
      "dependsOn": [
        {
          "target": "build",
          "projects": "self"
        }
      ],
      "executor": "@nxtensions/astro:preview",
      "options": {
        "port": 4601
      },
      "configurations": {
        "staging": {},
        "production": {}
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/reports/ag-charts-website.xml"],
      "dependsOn": [],
      "options": {
        "config": "packages/ag-charts-website/vitest.config.mjs"
      },
      "configurations": {
        "ci": {
          "outputFile": "../../reports/ag-charts-website.xml",
          "reporters": ["junit"]
        },
        "watch": {
          "watch": true
        },
        "update": {
          "update": true
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/ag-charts-website/**/*.ts"],
        "eslintConfig": "packages/ag-charts-website/.eslintrc.json"
      },
      "configurations": {
        "fix": {
          "fix": true
        }
      }
    },
    "check": {
      "executor": "@nxtensions/astro:check"
    },
    "sync": {
      "executor": "@nxtensions/astro:sync"
    }
  },
  "tags": []
}
