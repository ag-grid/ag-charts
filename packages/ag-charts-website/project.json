{
  "name": "ag-charts-website",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "packages/ag-charts-website/src",
  "targets": {
    "build": {
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "dependsOn": ["^build", "^docs-resolved-interfaces", "generate-examples", "generate-thumbnails"],
      "command": "astro build",
      "options": {
        "cwd": "packages/ag-charts-website",
        "silent": true
      },
      "configurations": {
        "staging": {},
        "production": {}
      }
    },
    "build-tsc": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --project packages/ag-charts-website/tsconfig.json"
      }
    },
    "dev": {
      "dependsOn": ["^build", "^docs-resolved-interfaces"],
      "command": "astro dev --port=${PORT} --host",
      "options": {
        "cwd": "packages/ag-charts-website"
      },
      "configurations": {
        "watch": {}
      }
    },
    "preview": {
      "dependsOn": [
        {
          "target": "build"
        }
      ],
      "command": "astro preview --port=${PORT}",
      "options": {
        "cwd": "packages/ag-charts-website"
      },
      "configurations": {
        "staging": {},
        "production": {}
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/reports/ag-charts-website.xml"],
      "dependsOn": [],
      "options": {
        "config": "packages/ag-charts-website/vitest.config.mjs"
      },
      "configurations": {
        "ci": {
          "outputFile": "../../reports/ag-charts-website.xml",
          "reporters": ["junit"]
        },
        "watch": {
          "watch": true
        },
        "update": {
          "update": true
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "eslintConfig": "packages/ag-charts-website/.eslintrc.json"
      },
      "configurations": {
        "fix": {
          "fix": true
        }
      }
    }
  },
  "implicitDependencies": [
    "ag-charts-community",
    "ag-charts-enterprise",
    "ag-charts-angular",
    "ag-charts-react",
    "ag-charts-vue",
    "ag-charts-vue3"
  ],
  "tags": []
}
