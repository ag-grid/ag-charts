{
  "extends": ["../../.eslintrc.json"],
  "ignorePatterns": ["!**/*", ".astro"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "prefer-spread": 1,
        "@typescript-eslint/consistent-type-imports": 1,
        "prefer-const": 1,
        "no-console": 1,
        "no-var": 1
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    }
  ]
}
