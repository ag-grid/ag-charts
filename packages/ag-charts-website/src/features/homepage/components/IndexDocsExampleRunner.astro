---
import { IndexDocsExampleRunner } from './IndexDocsExampleRunner';
import type { ExampleType } from '@features/example-generator/types';
import ExampleRunnerContainer from '@features/homepage/components/IndexExampleRunnerContainer.astro';
import { DOCS_FRAMEWORK_PATH_INDEX, DOCS_PAGE_NAME_PATH_INDEX } from '../constants';
import type { ExampleOptions } from '@features/example-runner/types';

interface Props {
    title: string;
    name: string;
    type: ExampleType;
    options: ExampleOptions;
    pageName: string;
}

const { title, name, type, options, pageName } = Astro.props as Props;
const framework = 'vanilla';
---

<ExampleRunnerContainer
    exampleHeight={options?.exampleHeight}
    exampleWidth={options?.exampleWidth}
    pageName={pageName}
    exampleName={name}
>
    <IndexDocsExampleRunner
        client:only="react"
        title={title}
        name={name}
        exampleType={type}
        options={options}
        framework={framework}
        pageName={pageName}
    />
</ExampleRunnerContainer>
