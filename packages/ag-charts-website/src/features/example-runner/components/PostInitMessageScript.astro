---
import {
    POST_INIT_MESSAGE_START,
    POST_INIT_MESSAGE_END,
    LIBRARY_INIT_SELECTOR,
} from '@features/example-runner/constants';
interface Props {
    pageName: string;
    exampleName: string;
    shadowDomSelector?: string;
}

const { pageName, exampleName, shadowDomSelector } = Astro.props as Props;
const initSelector = LIBRARY_INIT_SELECTOR;
---

<Fragment set:html={POST_INIT_MESSAGE_START} />
<script
    define:vars={{
        pageName,
        exampleName,
        shadowDomSelector,
        initSelector,
    }}
>
    const checkInit = function () {
        const exists = shadowDomSelector
            ? document.querySelector(shadowDomSelector)?.shadowRoot?.querySelector(initSelector)
            : document.querySelector(initSelector);
        if (exists) {
            const loadedEvent = {
                type: 'init',
                pageName,
                exampleName,
            };
            window.parent?.postMessage(loadedEvent);
        } else {
            requestAnimationFrame(() => checkInit());
        }
    };

    checkInit();
</script>
<Fragment set:html={POST_INIT_MESSAGE_END} />
