---
import { ReactComponent as LoadingLogo } from '@images/inline-svgs/ag-grid-logomark-loading.svg';
---

<div class="container">
    <LoadingLogo />
    <slot />
</div>

<style lang="scss">
    .container {
        position: relative;

        :global(.logomark) {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%) scale(2);
        }
    }
</style>
