---
import Layout from '@layouts/Layout.astro';
---

<Layout>
    <div id="top" class="container">
        <slot />
    </div>
</Layout>

<style lang="scss">
    @use '../design-system' as *;

    .container {
        --horizontal-padding: max(calc((100vw - var(--max-page-width)) / 2), var(--horizontal-margin));
        --menu-width: 14rem;
        --gallery-list-gap: #{$size-3};

        display: flex;
        flex-direction: row;
        position: relative;
        width: 100%;
    }
</style>
