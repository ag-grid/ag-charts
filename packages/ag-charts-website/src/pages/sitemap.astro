---
import { Sitemap } from '@ag-website-shared/components/sitemap/Sitemap';
import parseSitemap from '@ag-website-shared/components/sitemap/utils/sitemaputils';
import Layout from '../layouts/Layout.astro';

const response = await fetch('https://ag-grid.com/charts/sitemap-0.xml');
const xmlSitemap = await response.text();
const parsedSitemap = parseSitemap(xmlSitemap);
---

<Layout
    title={'AG Charts Sitemap'}
    description={'The AG Charts sitemap. Contains links to every page on the site, including docs.'}
    showDocsNav={false}
    showSearchBar={true}
>
    <div class:list={['contentViewport layout-grid']}>
        <div className={'layout-max-width-small'}>
            <h1>AG Charts Sitemap</h1>
            <Sitemap client:only="react" sitemap={parsedSitemap} site={'Charts'} />
        </div>
    </div>
</Layout>
