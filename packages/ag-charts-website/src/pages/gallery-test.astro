---
import { getEntry } from 'astro:content';
import Layout from '@layouts/Layout.astro';
import type { GalleryData, GalleryExample, GalleryExampleChartType } from '@ag-grid-types';
import { GalleryExampleLink } from '@features/gallery/components/GalleryExampleLink';

/**
 * Test gallery page to create images for homepage scrolling hero
 */

const galleryDataEntry = await getEntry('gallery', 'data');
const galleryData: GalleryData = galleryDataEntry?.data;
const { series } = galleryData;
---

<Layout title="AG Charts Gallery" hideFooter={true}>
    <div class="gallery-outer homepage-image-gen font-size-responsive font-size-small">
        <div class="content">
            {
                series.map((series: GalleryExampleChartType[]) => (
                    <div class="chart-type">
                        <div class="gallery-list">
                            {series.map(({ title, name, examples }) => (
                                <>
                                    <h3 id={name} class="gallery-list-title">
                                        {title}
                                    </h3>
                                    {examples.map(({ title, name }: GalleryExample) => (
                                        <GalleryExampleLink client:visible label={title} exampleName={name} />
                                    ))}
                                </>
                            ))}
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</Layout>

<style lang="scss">
    @use '../design-system' as *;

    $site-header-height: 180px;

    .enterpriseIcon {
        --text-color: red;
    }

    .gallery-outer {
        --horizontal-padding: #{$spacing-size-6};
        --menu-width: 12rem;
        --gallery-list-gap: #{$spacing-size-6};

        display: flex;
        flex-direction: row;
        position: relative;
        background-color: var(--color-bg-primary);
        padding-top: $site-header-height;
    }

    .menu {
        position: sticky;
        flex-shrink: 0;
        max-height: calc(100vh - #{$site-header-height});
        width: calc(var(--menu-width) + var(--horizontal-padding));
        top: $site-header-height;
        padding-top: calc($spacing-size-16 + $spacing-size-4);
        padding-left: var(--horizontal-padding);
        background-color: var(--color-bg-primary);
        border-right: solid 1px var(--neutral-200);
        overflow-y: scroll;

        @media screen and (max-width: $breakpoint-gallery-small) {
            position: fixed;
            height: $site-header-height;
            width: 100%;
            top: $site-header-height;
            padding: 0;
            background-color: var(--color-bg-toolbar);
            border-bottom: 1px solid var(--color-border-primary);
            overflow-x: scroll;
            z-index: 1;
        }
    }

    .menu ul {
        @media screen and (max-width: $breakpoint-gallery-small) {
            display: inline-flex;
            align-items: center;
            height: 100%;
            margin-bottom: 0 !important;
            padding-left: var(--horizontal-padding) !important;
        }
    }

    .menu li {
        margin-bottom: $spacing-size-4 !important;

        @media screen and (max-width: $breakpoint-gallery-small) {
            margin-bottom: 0 !important;
            flex-shrink: 0;

            &:last-child {
                padding-right: $spacing-size-24;
            }
        }
    }

    .menu a {
        --text-color: var(--color-fg-secondary); // only applies to the icon?
        --icon-size: 1.75em;

        display: flex;
        align-items: center;
        color: var(--color-fg-secondary);
        padding: 2px;

        :global(.icon) {
            fill: color-mix(in srgb, var(--text-color) 75%, transparent);
            transition: fill $transition-default-timing;
        }

        &:hover,
        &:global(.active) {
            --text-color: var(--link-hover-color);

            background: rgba(56, 146, 249, 0.06);

            :global(.icon) {
                fill: var(--text-color);
            }
        }
    }

    .menu .name {
        margin-left: $spacing-size-2;
        margin-right: $spacing-size-1;
    }

    .menu .enterpriseIcon {
        --icon-size: 15px;
    }

    .menu-scroll-indicator {
        position: sticky;
        width: 100%;
        height: $spacing-size-24;
        bottom: 0;
        left: 0;
        background: linear-gradient(transparent, var(--color-bg-primary));
        pointer-events: none;

        @media screen and (max-width: $breakpoint-gallery-small) {
            position: fixed;
            height: $site-header-height;
            top: $site-header-height;
            left: auto;
            right: 0;
            width: $spacing-size-24;
            background: linear-gradient(90deg, transparent, var(--color-bg-toolbar));
        }
    }

    .content {
        flex: 1;
        padding: $site-header-height var(--horizontal-padding) $spacing-size-24;

        @media screen and (min-width: $breakpoint-gallery-small) {
            padding: $spacing-size-4 var(--horizontal-padding) $spacing-size-56;
        }

        @media screen and (min-width: $breakpoint-gallery-large) {
            padding-left: $spacing-size-8;
        }
    }

    .chart-type:first-child {
        padding-top: $spacing-size-4;
    }

    .chart-type {
        padding-bottom: $spacing-size-8;
    }

    .gallery-list {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        gap: var(--gallery-list-gap);
    }

    .gallery-list-title {
        position: absolute;
        visibility: hidden;
    }
</style>

<!-- Used to create images for the homepage scrolling gallery hero section -->
<style lang="scss">
    @use '../design-system' as *;

    .homepage-image-gen {
        background-color: var(--dark-blue-600) !important;

        :global([data-dark-mode='true']) & {
            background-color: transparent !important;
        }

        .chart-type,
        .gallery-list {
            display: contents;
        }

        .content {
            max-width: 1400px;
        }

        .content > div {
            display: flex;
            flex-wrap: wrap;
            gap: $spacing-size-6;
        }

        :global(.galleryExample) {
            background-color: var(--color-bg-primary);
        }

        :global(.galleryExample span) {
            display: none !important;
        }
    }
</style>

<style lang="scss" is:global>
    @use '../design-system' as *;

    .site-header {
        position: fixed !important;
        width: 100%;
        z-index: 2;
    }

    .icon {
        transition: fill $transition-default-timing;
    }
</style>
