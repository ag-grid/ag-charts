---
import { getEntry } from 'astro:content';
import Layout from '@layouts/Layout.astro';
import { getFrameworkFromPath } from '@features/docs/utils/urlPaths';
import { Pipeline } from '@features/pipeline/Pipeline';
import { PagesNavigationFromLocalStorage } from '@components/pages-navigation/components/PagesNavigationFromLocalStorage';

const path = Astro.url.pathname;
const framework = getFrameworkFromPath(path);

const menuEntry = await getEntry('menu', 'data');
---

<Layout
    title="AG Charts Pipeline"
    description="Lists feature requests and bugs in our backlog. Find items planned for the next release or check their status. Search by release date, issue number or summary."
    showSearchBar={true}
>
    <div class="layout-grid">
        <PagesNavigationFromLocalStorage client:load menuData={menuEntry.data} framework={framework} />
        <Pipeline currentFramework={framework} client:only="react" />
    </div>
</Layout>
