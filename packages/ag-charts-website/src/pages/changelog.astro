---
import { getEntry } from 'astro:content';
import Layout from '@layouts/Layout.astro';
import { getFrameworkFromPath } from '@features/docs/utils/urlPaths';
import { Changelog } from '@features/changelog/Changelog';
import { PagesNavigationFromLocalStorage } from '@components/pages-navigation/components/PagesNavigationFromLocalStorage';

const path = Astro.url.pathname;
const framework = getFrameworkFromPath(path);

const menuEntry = await getEntry('menu', 'data');
---

<Layout
    title="AG Charts Changelog"
    description="Identify the specific version in which a feature request or bug fix was included. Find changelog items by issue number, summary content, or version."
    showDocsNav={true}
    showSearchBar={true}
>
    <div class="layout-grid">
        <PagesNavigationFromLocalStorage client:load menuData={menuEntry.data} framework={framework} />
        <Changelog currentFramework={framework} client:only />
    </div>
</Layout>
