---
import { getEntry } from 'astro:content';
import GalleryFrameworkTemplate from '@features/gallery/components/GalleryFrameworkTemplate.astro';
import { getGalleryExamplePages } from '@features/gallery/utils/pageData';

/**
 * This page is the same as `[exampleName].astro`, but using relative paths for script files
 *
 * This is useful for situations where the script files are self contained eg, plunkr
 *
 * NOTE: This can't be called `index.astro` because it would clash with the generated
 * `index.html` fragment file from examples
 */
export async function getStaticPaths() {
    const galleryDataEntry = await getEntry('gallery', 'data');
    const pages = getGalleryExamplePages({ galleryData: galleryDataEntry.data });
    return pages;
}

const { exampleName } = Astro.params;
---

<GalleryFrameworkTemplate exampleName={exampleName!} relativePath={true} />
