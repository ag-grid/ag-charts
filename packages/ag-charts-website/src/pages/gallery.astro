---
import { getEntry } from 'astro:content';
import Layout from '@layouts/Layout.astro';
import { Icon, IconName } from '@components/icon/Icon';
import { getPageHashUrl } from '@features/gallery/utils/urlPaths';
import type { GalleryData, GalleryExample, GalleryExampleChartType } from '@ag-grid-types';
import { GalleryExampleLink } from '@features/gallery/components/GalleryExampleLink';
import { GalleryExampleThemeDropdown } from '@features/gallery/components/GalleryExampleThemeDropdown';
import styles from '../styles/gallery.module.scss';

const galleryDataEntry = await getEntry('gallery', 'data');
const galleryData: GalleryData = galleryDataEntry?.data;
const { series } = galleryData;
---

<Layout title="AG Charts Gallery">
    <div class="gallery-outer font-size-responsive font-size-small">
        <div class="menu">
            <ul class="list-style-none">
                {
                    series.flat().map((series: GalleryExampleChartType) => (
                        <li>
                            <a href={getPageHashUrl({ chartSeriesName: series.name, isRelative: true })}>
                                <Icon client:only name={series.icon as IconName} />
                                <span class="name">{series.title}</span>
                                {series.enterprise && (
                                    <span class="enterpriseIcon">
                                        <Icon client:only name="enterprise" />
                                    </span>
                                )}
                            </a>
                        </li>
                    ))
                }
            </ul>
            <div class="menu-scroll-indicator"></div>
        </div>

        <div class="content">
            <div class={styles.toolPanel}>
                <GalleryExampleThemeDropdown client:only="react" />
            </div>
            <div>
                {
                    series.map((series: GalleryExampleChartType[]) => (
                        <div class="chart-type">
                            <div class="gallery-list">
                                {series.map(({ title, name, examples }) => (
                                    <>
                                        <h3 id={name} class="gallery-list-title">
                                            {title}
                                        </h3>
                                        {examples.map(({ title, name }: GalleryExample) => (
                                            <GalleryExampleLink client:visible label={title} exampleName={name} />
                                        ))}
                                    </>
                                ))}
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</Layout>

<script>
    import { scrollIntoViewById } from '@utils/navigation';
    import { scrollspy } from 'src/utils/scrollspy';
    import type { MarkdownHeading } from 'astro';

    const navAnchors = document.querySelectorAll<HTMLAnchorElement>('a[href^="#"]');
    const headings = [] as MarkdownHeading[];

    navAnchors.forEach((anchor) => {
        const id = anchor.getAttribute('href')!.substring(1);

        // Add smooth scrolling for menu anchor links
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            scrollIntoViewById(id);
        });

        headings.push({ slug: id, depth: 1, text: anchor.text.trim() });
    });

    scrollspy(
        headings,
        (slug) => {
            for (const navItem of navAnchors) {
                navItem.classList.toggle('active', navItem.getAttribute('href') === `#${slug}`);
            }
        },
        { offset: 120 }
    );
</script>

<style lang="scss">
    @use '../design-system' as *;

    $site-header-height: 64px;

    .enterpriseIcon {
        --text-color: red;
    }

    .gallery-outer {
        --horizontal-padding: #{$spacing-size-6};
        --menu-width: 12rem;
        --gallery-list-gap: #{$spacing-size-6};

        display: flex;
        flex-direction: row;
        position: relative;
        background-color: var(--color-bg-primary);
        padding-top: $site-header-height;
    }

    .menu {
        position: sticky;
        flex-shrink: 0;
        max-height: calc(100vh - #{$site-header-height});
        width: calc(var(--menu-width) + var(--horizontal-padding));
        top: $site-header-height;
        padding-top: calc($spacing-size-16 + $spacing-size-4);
        padding-left: var(--horizontal-padding);
        background-color: var(--color-bg-primary);
        border-right: solid 1px var(--neutral-200);
        overflow-y: scroll;

        @media screen and (max-width: $breakpoint-gallery-small) {
            position: fixed;
            height: $site-header-height;
            width: 100%;
            top: $site-header-height;
            padding: 0;
            background-color: var(--toolbar-background);
            border-bottom: 1px solid var(--color-border-primary);
            overflow-x: scroll;
            z-index: 1;
        }
    }

    .menu ul {
        @media screen and (max-width: $breakpoint-gallery-small) {
            display: inline-flex;
            align-items: center;
            height: 100%;
            margin-bottom: 0 !important;
            padding-left: var(--horizontal-padding) !important;
        }
    }

    .menu li {
        margin-bottom: $spacing-size-4 !important;

        @media screen and (max-width: $breakpoint-gallery-small) {
            margin-bottom: 0 !important;
            flex-shrink: 0;

            &:last-child {
                padding-right: $spacing-size-16;
            }
        }
    }

    .menu a {
        --text-color: var(--color-bg-secondary); // only applies to the icon?
        --icon-size: 1.75em;

        display: flex;
        align-items: center;
        color: var(--color-bg-secondary);
        padding: 2px;

        :global(.icon) {
            fill: color-mix(in srgb, var(--text-color) 75%, transparent);
            transition: fill $default-transition-timing;
        }

        &:hover,
        &:global(.active) {
            --text-color: var(--link-hover-color);

            background: rgba(56, 146, 249, 0.06);

            :global(.icon) {
                fill: var(--text-color);
            }
        }
    }

    .menu .name {
        margin-left: $spacing-size-2;
        margin-right: $spacing-size-1;
    }

    .menu .enterpriseIcon {
        --icon-size: 15px;
    }

    .menu-scroll-indicator {
        position: sticky;
        width: 100%;
        height: $spacing-size-16;
        bottom: 0;
        left: 0;
        background: linear-gradient(transparent, var(--color-bg-primary));
        pointer-events: none;

        @media screen and (max-width: $breakpoint-gallery-small) {
            position: fixed;
            height: $site-header-height;
            top: $site-header-height;
            left: auto;
            right: 0;
            width: $spacing-size-16;
            background: linear-gradient(90deg, transparent, var(--toolbar-background));
        }
    }

    .content {
        flex: 1;
        padding: $site-header-height var(--horizontal-padding) $spacing-size-16;

        @media screen and (min-width: $breakpoint-gallery-small) {
            padding: $spacing-size-4 var(--horizontal-padding) $spacing-size-20;
        }

        @media screen and (min-width: $breakpoint-gallery-large) {
            padding-left: $spacing-size-8;
        }
    }

    .chart-type:first-child {
        padding-top: $spacing-size-4;
    }

    .chart-type {
        padding-bottom: $spacing-size-8;
    }

    .gallery-list {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        gap: var(--gallery-list-gap);
    }

    .gallery-list-title {
        position: absolute;
        visibility: hidden;
    }
</style>

<style lang="scss" is:global>
    @use '../design-system' as *;

    .site-header {
        position: fixed !important;
        width: 100%;
        z-index: 2;
    }

    .icon {
        transition: fill $default-transition-timing;
    }
</style>
