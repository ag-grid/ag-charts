---
import { getEntry } from 'astro:content';
import DemoFrameworkTemplate from '../../../../features/demo/components/DemoFrameworkTemplate.astro';
import { getDemoExamplePages } from '../../../../features/demo/utils/pageData';
import { getGeneratedPlainDemoContents } from '../../../../features/demo/utils/examplesGenerator';

/**
 * This page is the same as `[exampleName].astro`, but replacing the
 * main entry file with the plain configuration to show a more
 * simplified chart.
 */
export async function getStaticPaths() {
    const demosEntry = await getEntry('demo', 'demos');
    const pages = getDemoExamplePages({ demos: demosEntry.data });
    return pages;
}

const { exampleName } = Astro.params;
const thumbnailGeneratedContents = await getGeneratedPlainDemoContents({ exampleName: exampleName! });
---

<style>
    /* Remove default page padding */
    body {
        padding: 0;
    }
</style>

<DemoFrameworkTemplate exampleName={exampleName!} generatedContents={thumbnailGeneratedContents} />
