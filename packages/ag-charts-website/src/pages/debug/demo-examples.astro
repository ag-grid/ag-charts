---
import { getEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import { getDemoExamplePages } from '../../features/demo/utils/pageData';
import { getDemoExampleUrl } from '../../features/demo/utils/urlPaths';

const demos = await getEntry('demo', 'demos');

const examples = getDemoExamplePages({ demos: demos.data });
---

<Layout title={`Debug: Demo Examples`}>
    <main class="page-margin container">
        <h1>Demo Example Pages ({examples.length})</h1>
        <table>
            <thead>
                <th>No.</th>
                <th>Url</th>
                <th><code>params.chartType</code></th>
                <th><code>params.exampleName</code></th>
            </thead>
            <tbody>
                {
                    examples.map((example, index) => {
                        const { chartType, exampleName } = example.params;
                        const url = getDemoExampleUrl({
                            chartType,
                            exampleName,
                        });
                        return (
                            <tr>
                                <td>{index + 1}</td>
                                <td>
                                    <a href={url}>{url}</a>
                                </td>
                                <td>{chartType}</td>
                                <td>{exampleName}</td>
                            </tr>
                        );
                    })
                }
            </tbody>
        </table>
    </main>
</Layout>

<style lang="scss">
    @use '../../design-system' as *;

    .container {
        margin-top: $size-6;
        margin-bottom: calc($size-6 * 4);
    }
</style>
