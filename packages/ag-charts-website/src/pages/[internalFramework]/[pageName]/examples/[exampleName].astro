---
import { getCollection } from 'astro:content';
import { getDocExamplePages } from '../../../../utils/pages';
import type { InternalFramework } from '../../../../types/ag-grid';
import FrameworkTemplateExampleRunner from '../../../../features/example-runner/components/FrameworkTemplateExampleRunner.astro';

export async function getStaticPaths() {
    const pages = await getCollection('docs');
    return getDocExamplePages({
        pages,
    });
}

const { internalFramework, pageName, exampleName } = Astro.params;
---

<FrameworkTemplateExampleRunner
    internalFramework={internalFramework as InternalFramework}
    pageName={pageName!}
    exampleName={exampleName!}
/>
