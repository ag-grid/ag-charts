---
import { getCollection } from 'astro:content';
import type { InternalFramework } from '@ag-grid-types';
import DocsFrameworkTemplate from '@features/docs/components/DocsFrameworkTemplate.astro';
import { getDocsExamplePages } from '@features/docs/utils/pageData';

/**
 * This page is the same as `[exampleName].astro`, but using relative paths for script files
 *
 * This is useful for situations where the script files are self contained eg, plunkr
 *
 * NOTE: This can't be called `index.astro` because it would clash with the generated
 * `index.html` fragment file from examples
 */
export async function getStaticPaths() {
    const pages = await getCollection('docs');
    return getDocsExamplePages({
        pages,
    });
}

const { internalFramework, pageName, exampleName } = Astro.params;
---

<DocsFrameworkTemplate
    internalFramework={internalFramework as InternalFramework}
    pageName={pageName!}
    exampleName={exampleName!}
    relativePath={true}
/>
