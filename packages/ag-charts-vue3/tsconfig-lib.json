{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": false,
    "experimentalDecorators": true,
    "declaration": true,
    "rootDir": "src",
    "outDir": "lib",
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/node_modules/*",
    "src/main.ts"
  ]
}
