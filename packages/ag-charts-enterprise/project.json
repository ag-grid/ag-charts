{
  "name": "ag-charts-enterprise",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/ag-charts-enterprise/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "inputs": ["tsDefaults"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "packages/ag-charts-enterprise/dist",
        "main": "packages/ag-charts-enterprise/src/main.ts",
        "tsConfig": "packages/ag-charts-enterprise/tsconfig.lib.json",
        "rollupConfig": "packages/ag-charts-enterprise/rollup.config.cjs",
        "assets": [{ "input": "./", "glob": "LICENSE.*", "output": "./" }],
        "project": "packages/ag-charts-enterprise/package.json",
        "compiler": "tsc",
        "format": ["cjs"],
        "generateExportsField": true
      },
      "configurations": {
        "watch": {
          "compiler": "swc"
        },
        "production": {
          "format": ["cjs", "esm"]
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/ag-charts-enterprise/**/*.ts", "packages/ag-charts-enterprise/package.json"],
        "eslintConfig": "packages/ag-charts-enterprise/.eslintrc.json"
      },
      "configurations": {
        "fix": {
          "fix": true
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}", "{workspaceRoot}/reports/ag-charts-enterprise.xml"],
      "options": {
        "jestConfig": "packages/ag-charts-enterprise/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true
        },
        "watch": {
          "watch": true
        },
        "update": {
          "updateSnapshot": true
        }
      }
    },
    "pack": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "outputs": ["dist/packages/ag-charts-enterprise.tgz"],
      "options": {
        "cwd": "packages/ag-charts-enterprise/dist",
        "commands": [
          { "command": "mkdir -p ../../../dist/packages/" },
          { "command": "yarn pack -f ../../../dist/packages/ag-charts-enterprise.tgz" }
        ]
      }
    }
  },
  "tags": []
}
