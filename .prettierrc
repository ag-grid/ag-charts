{
    "trailingComma": "es5",
    "tabWidth": 4,
    "printWidth": 120,
    "singleQuote": true,
    "overrides": [
        {
            "files": [
                "package.json",
                "package-lock.json",
                "nx.json",
                "project.json",
                ".eslintrc.json",
                "tsconfig{.{base,lib,spec,tools},}.json",
                ".vscode/*.json"
            ],
            "options": { "tabWidth": 2 }
        },
        {
            "files": ["*.mdoc"],
            "options": {
                "parser": "markdown"
            }
        }
    ]
}
